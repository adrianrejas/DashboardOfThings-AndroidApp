

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <LinearLayout
        android:layout_width="@dimen/list_width_masterdetail"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/list_side_outer_margin"
        android:layout_marginRight="@dimen/list_side_outer_margin"
        android:baselineAligned="false"
        android:divider="?android:attr/dividerHorizontal"
        android:orientation="horizontal"
        android:showDividers="middle"
        tools:context="com.arejas.dashboardofthings.presentation.ui.activities.NetworkListActivity">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/srl_refresh_layout">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    android:id="@+id/networks_list_loading_layout"
                    layout="@layout/layout_loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/list_side_outer_margin"
                    android:orientation="vertical"/>

                <include
                    android:id="@+id/networks_list_error_layout"
                    layout="@layout/layout_error"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/list_side_outer_margin"
                    android:orientation="vertical"/>

                <include
                    android:id="@+id/networks_list_no_elements_layout"
                    layout="@layout/layout_no_elements"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/list_side_outer_margin"
                    android:orientation="vertical"/>

                <include
                    android:id="@+id/networks_list_list_layout"
                    layout="@layout/layout_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/list_side_outer_margin"
                    android:orientation="vertical"/>

            </FrameLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <FrameLayout
            android:id="@+id/network_detail_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />

    </LinearLayout>

</layout>
